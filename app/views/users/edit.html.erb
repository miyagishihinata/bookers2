<p id="notice"></p>
<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>Users info</h2>
　　  <% if @book.errors.any? %>
        <%= @book.errors.count %> errors prohibited this obj from being saved:
        <ul>
          <% @book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>


      <%= form_with model: @user do |f| %>
        <label for="user_name">Name</label>
        <%= f.text_field :name, autofocus: true, id:"user_name", placeholder:"名前" %>

        <label for="user_image">Image</label>
        <%= f.file_field :profile_image, placeholder:"プロフィール画像", accept: "image/*" %>

        <label for="user_introduction">Introduction</label>
        <%= f.text_area :introduction %>

        <%= f.submit "Update User", class:"btn btn-secondary" %>
      <% end %>
      </div>
    </div>
  </div>

</div>


