
  <p id="notice">You have created book successfully.</p>
  <div class="container px-5 px-sm-0">
    <div class="row">

      <div class="col-md-3">
        <h2>User info</h2>
        <%= image_tag @user.get_profile_image(100,100) %>

          <table class="table">
            <tbody>
              <tr></tr>

              <tr>
                <th>name</th>
                <th><%= @user.name %></th>
              </tr>

              <tr>
                <th>introduction</th>
                <th></th>
              </tr>

            </tbody>
          </table>

          <div class="row">
            <a class="btn btn-outline-secondary btn-block edit_user" href="/users/edit">
            <i class="fa-solid fa-user-gear"></i>
            </a>
          </div>

          <h2 class="mt-3">New book</h2>
          <%= form_with model: @book, url: '/books', method: :post do |f| %>
            <div class="form-group">
            <label for="book_title">Title</label>
            <input class="form-control book_title" type="text" name="book[title]" id="book_title">
            </div>

            <div class="form-group">
            <label for="book_opinion">Opinion</label>
            <textarea class="form-control book_body" name="book[body]" id="book_body"></textarea>
            </div>

          <form action="/books">
            <div class="form-group">
              <input type="submit" name="commit" value="Create Book" class="btn btn-success" data-disable-with="Create Book">
            </div>
          </form>
          <% end %>
      </div>

            <div class="col-md-8 offset-md-1">
              <h2>Book detail</h2>
              <table class="table">
                <tbody>
                  <tr>
                    <td>
                      <%= link_to user_path(@book.user.id) do %>
                       <%= image_tag @book.user.get_profile_image(100,100) %><br>
                       <%= @book.user.name %>
                      <% end %>
                    </td>
                    <td>
                      <%= link_to book_path(@book.id) do %>
                       <%= @book.title %>
                      <% end %>
                    </td>
                    <td>
                      <%= @book.body %>
                    </td>
                    <td>
                    <%= link_to "Edit", edit_book_path(@book.id), class:"btn btn-sm btn-success" %>
                    </td>
                    <td>
                    <% if @book.user == current_user %>
                       <%= link_to "Destroy", book_path(@book.id), method: :delete, "data-confirm" => "本当に削除しますか？", class: "btn btn-sm btn-danger" %>
                    <% end %>
                    </td>

                  </tr>
                </tbody>
              </table>
            </div>

    </div>
  </div>

